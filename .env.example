# Discord Bot Configuration
# Copy this file to .env and fill in your actual values

# Required: Your Discord Bot Token
# Get it from: https://discord.com/developers/applications
DISCORD_TOKEN=your_bot_token_here

# Optional: Your Discord Server (Guild) ID for slash command sync
# Right-click your server icon with Developer Mode enabled to copy ID
GUILD_ID=your_guild_id_here

# Optional: Command prefix for text commands (default: ,)
PREFIX=,

# Optional: Comma-separated list of admin user IDs
# Example: 123456789,987654321
ADMIN_IDS=

# Optional: Lottery channel ID
# Where lottery results will be announced
LOTTERY_CHANNEL_ID=

# Optional: Stock webhook URL for price updates
# Create a webhook in your channel for stock price notifications
STOCK_WEBHOOK_URL=

# Database Configuration (default: SQLite)
DATABASE_URL=sqlite:///economy.db

# Bot Settings
DEFAULT_COOLDOWN=60
MAX_BET_AMOUNT=500000000000
STOCK_UPDATE_MIN_SECONDS=120
STOCK_UPDATE_MAX_SECONDS=300
